{
  "info": {
    "_postman_id": "008ea715-15c2-4b33-9d8d-fe1f942d800c",
    "name": "Auth",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Login",
      "event": [
        {
          "listen": "test",
          "script": {
            "id": "0ea56320-900d-471f-af60-066ca2a32e3e",
            "exec": [
              "pm.test(\"Login successful\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "const json = pm.response.json();",
              "",
              "pm.environment.set(\"token\", json.accessToken);",
              "pm.environment.set(\"refreshToken\", json.refreshToken);"
            ],
            "type": "text/javascript",
            "packages": {},
            "requests": {}
          }
        }
      ],
      "id": "e26d103d-0ca7-4a35-8be9-292b4ead43ca",
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"admin@techsupport.pro\",\n  \"password\": \"admin123\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{baseUrl}}/auth/login",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "auth",
            "login"
          ]
        }
      },
      "response": []
    },
    {
      "name": "Refresh",
      "event": [
        {
          "listen": "test",
          "script": {
            "id": "5688c18d-0686-4ac1-8856-6a941e93f457",
            "exec": [
              "pm.environment.set(\"token\", pm.response.json().accessToken);"
            ],
            "type": "text/javascript",
            "packages": {},
            "requests": {}
          }
        }
      ],
      "id": "65bc0eb8-487e-4b45-b81e-b791c0fbb094",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{baseUrl}}/auth/refresh",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "auth",
            "refresh"
          ]
        }
      },
      "response": []
